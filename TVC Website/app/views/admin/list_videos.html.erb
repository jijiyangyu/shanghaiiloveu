<%= link_to '新建视频', :action=>"new_videos" %> |
<%=link_to "站点管理", :controller=>"admin"%> |
<%=link_to "网站首页", :controller=>"home"%><br>
<h2>视频内容列表</h2>
<br>
<table>
  <tr>
    <th>序号</th>
    <th>所有者</th>
    <th>正片</th>
    <th>首页</th>
    <th>视频标题</th>
    <th colspan="3">操作</th>
  </tr>

  <% @videos.each do |video| %>
    <tr>
      <td><%=h video.show_num %></td>
      <td><%=h video.owner %></td>
      <td><%=show_yes(video.film_or_not) %></td>
      <td><%=show_yes(video.home) %></td>
      <td><%=h video.title %></td>
      <td><%= link_to '显示内容', :action=>"show_videos",:id=>video.id %></td>
      <td><%= link_to '修改内容', :action=>"edit_videos",:id=>video.id %></td>
      <td><%= link_to '删除内容', :action=>"destroy_videos",:id=>video.id, :confirm => '确定删除内容吗?' %></td>
    </tr>
  <% end %>
</table>
<br>
<%=render :partial=>"home/page_list"%>
<%= link_to '显示内容', :action=>"show_videos",:id=>@video.id %> |
<%= link_to '返回', :action=>"list_videos" %><br>
<h2>修改视频内容</h2>
<% form_for :admin, @video, :url=>{:action=>"update_videos", :id=>@video.id} do |f| %>
  <%= f.error_messages %>
  <p>
    <b>序号:<br /></b>
    <%= f.text_field :show_num %>
  </p>
  <p>
    <b>所有者:<br /></b>
    <%= f.text_field :owner %>
  </p>
  <p>
    <b>视频标题(10-11个中文字符):<br /></b>
    <%= f.text_field :title %>
  </p>
  <p>
    <b>链接地址:<br /></b>
    <%= f.text_field :src_address %>
  </p>
  <p>
    <b>播放器地址:<br /></b>
    <%= f.text_field :player_address %>
  </p>
  <p>
    <b>内容地址:<br /></b>
    <%= f.text_field :video_address %>
  </p>
  <p>
    <b>缩略图地址:<br /></b>
    <%= f.text_field :image_address %>
  </p>
      <p>
    <b>是否电影正片:<br /></b>
    是<%if @video.film_or_not -%> <%= f.radio_button :film_or_not, 1 , :checked=>true %>
	&nbsp;否&nbsp; <%= f.radio_button :film_or_not, 0 %> <%else -%> <%= f.radio_button :film_or_not, 1 %>
	&nbsp;否&nbsp; <%= f.radio_button :film_or_not, 0, :checked=>true %> <%end -%>
  </p>
  <p>
    <b>地址直接播放:<br /></b>
    是<%if @video.src_or_not -%> <%= f.radio_button :src_or_not, 1 , :checked=>true %>
	&nbsp;否&nbsp; <%= f.radio_button :src_or_not, 0 %> <%else -%> <%= f.radio_button :src_or_not, 1 %>
	&nbsp;否&nbsp; <%= f.radio_button :src_or_not, 0, :checked=>true %> <%end -%>
  </p>
  <p>
    <b>首页播放视频:<br /></b>
    是<%if @video.home -%> <%= f.radio_button :home, 1 , :checked=>true %>
	&nbsp;否&nbsp; <%= f.radio_button :home, 0 %> <%else -%> <%= f.radio_button :home, 1 %>
	&nbsp;否&nbsp; <%= f.radio_button :home, 0, :checked=>true %> <%end -%>
  </p>
  <p>
    <b>备注内容:<br /></b>
    <%= f.text_area :remark %>
  </p>
  <p>
    <%= f.submit '更新视频内容' %>
  </p>
<% end %>
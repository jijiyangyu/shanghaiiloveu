<%= link_to '新建图片', :action=>"new_pictures" %> |
<%=link_to "站点管理", :controller=>"admin"%> |
<%=link_to "网站首页", :controller=>"home"%><br>
<h2>首页图片列表</h2>
<br>
<table>
  <tr>
    <th>图片标题</th>
    <th>所有者</th>
    <th>链接地址</th>
    <th colspan="3">操作</th>
  </tr>

  <% @pictures.each do |picture| %>
    <tr>
      <td><%=h picture.title %></td>
      <td><%=h picture.owner %></td>
      <td><%=auto_link picture.home_address %></td>
      <td><%= link_to '显示内容', :action=>"show_pictures",:id=>picture.id %></td>
      <td><%= link_to '修改内容', :action=>"edit_pictures",:id=>picture.id %></td>
      <td><%= link_to '删除内容', :action=>"destroy_pictures",:id=>picture.id, :confirm => '确定删除内容吗?' %></td>
    </tr>
  <% end %>
</table>
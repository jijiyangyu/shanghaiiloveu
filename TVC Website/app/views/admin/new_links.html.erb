<%= link_to '返回', :action=>"list_links" %><br>
<h1>建立链接内容</h1>
<% form_for :admin, @link, :url=>{:action=>"create_links"} do |f| %>
  <%= f.error_messages %>
  <p>
    <b>序号:<br /></b>
    <%= f.text_field :show_num %>
  </p>
  <p>
    <b>链接标题(10-11个中文字符):<br /></b>
    <%= f.text_field :title %>
  </p>
  <p>
    <b>链接地址:<br /></b>
    <%= f.text_field :address %>
  </p>
  <p>
    <b>备注内容:<br /></b>
    <%= f.text_area :remark %>
  </p>
  <p>
    <%= f.submit '建立链接' %>
  </p>
<% end %>
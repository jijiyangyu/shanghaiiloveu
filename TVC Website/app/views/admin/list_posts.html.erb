<%= link_to '新建文案', :action=>"new_posts" %> |
<%=link_to "站点管理", :controller=>"admin"%> |
<%=link_to "网站首页", :controller=>"home"%><br>
<h2>文案内容列表</h2>
<br>
<table>
  <tr>
    <th>序号</th>
    <th>文案标题</th>
    <th>发布者</th>
    <th>文案类别</th>
    <th colspan="4">操作</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%=h post.show_num %></td>
      <td><%=h post.title %></td>
      <td><%=h post.owner %></td>
      <td><%=show_category post.category_id %></td>
      <td><%= link_to '显示', :action=>"show_posts",:id=>post.id %></td>
      <td><%= link_to '预览', :action=>"preview_posts",:id=>post.id %></td>
      <td><%= link_to '修改', :action=>"edit_posts",:id=>post.id %></td>
      <td><%= link_to '删除', :action=>"destroy_posts",:id=>post.id, :confirm => '确定删除文案吗?' %></td>
    </tr>
  <% end %>
</table>
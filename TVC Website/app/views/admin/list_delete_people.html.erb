<%=render :partial=>"admin/header"%>
<%=link_to "显示未定", :controller=>"admin", :action=>"index"%> |
<%=link_to "显示剔除", :controller=>"admin", :action=>"list_delete_people"%> |
<%=link_to "显示确定", :controller=>"admin", :action=>"list_enroll_people"%> |
<%=link_to "显示全部", :controller=>"admin", :action=>"list_all_people"%>|
<%=link_to "下载资料", :controller=>"admin", :action=>"export"%><br>
<br>
<table>
  <tr>
    <th>称呼</th>
    <th>性别</th>
    <th>年龄</th>
    <th>星座</th>
    <th>工作情况</th>
    <th>特长技能</th>
    <th>创建时间</th>
    <th colspan="2">具体操作</th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%=h person.name %></td>
      <td><%=show_sex(person.sex) %></td>
      <td><%=Date.today.year - person.birthday.year %></td>
      <td><%=h person.constellation %></td>
      <td><%=h person.job %></td>
      <td><%=h person.field %></td>
      <td><%=h person.created_at %></td>
      <td><%=link_to "察看", :controller=>"admin", :action=>"show_people", :id=>person.id%></td>
      <td><%=link_to "恢复", :controller=>"admin", :action=>"release_people", :id=>person.id, :act=>"list_delete_people"%></td>
    </tr>
  <% end %>
</table>

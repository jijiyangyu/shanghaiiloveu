<%= link_to '新建头条', :action=>"new_headlines" %> |
<%=link_to "站点管理", :controller=>"admin"%> |
<%=link_to "网站首页", :controller=>"home"%><br>
<h2>头条内容列表</h2>
<br>
<table>
  <tr>
    <th>序号</th>
    <th>头条文字</th>
    <th>链接标题</th>
    <th>链接地址</th>
    <th colspan="3">操作</th>
  </tr>

  <% @headlines.each do |headline| %>
    <tr>
      <td><%=h headline.show_num %></td>
      <td><%=h headline.headline %></td>
      <td><%=h headline.title %></td>
      <td><%=auto_link headline.address %></td>
      <td><%= link_to '显示内容', :action=>"show_headlines",:id=>headline.id %></td>
      <td><%= link_to '修改内容', :action=>"edit_headlines",:id=>headline.id %></td>
      <td><%= link_to '删除内容', :action=>"destroy_headlines",:id=>headline.id, :confirm => '确定删除内容吗?' %></td>
    </tr>
  <% end %>
</table>
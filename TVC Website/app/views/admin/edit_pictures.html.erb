<%= link_to '显示内容', :action=>"show_pictures",:id=>@picture.id %> |
<%= link_to '返回', :action=>"list_pictures" %><br>
<h2>修改首页图片</h2>
<% form_for :admin, @picture, :url=>{:action=>"update_pictures", :id=>@picture.id} do |f| %>
  <%= f.error_messages %>
  <p>
    <b>图片标题:<br /></b>
    <%= f.text_field :title %>
  </p>
  <p>
    <b>所有者:<br /></b>
    <%= f.text_field :owner %>
  </p>
  <p>
    <b>是否暗图:<br /></b>
    是<%if @picture.black_or_white -%> <%= f.radio_button :black_or_white, 1 , :checked=>true %>
	&nbsp;否&nbsp; <%= f.radio_button :black_or_white, 0 %> <%else -%> <%= f.radio_button :black_or_white, 1 %>
	&nbsp;否&nbsp; <%= f.radio_button :black_or_white, 0, :checked=>true %> <%end -%>
  </p>
  <p>
    <b>首页链接地址:<br /></b>
    <%= f.text_field :home_address %>
  </p>
  <p>
    <b>内页链接地址:<br /></b>
    <%= f.text_field :banner_address %>
  </p>
  <p>
    <b>备注内容:<br /></b>
    <%= f.text_area :remark %>
  </p>
  <p>
    <%= f.submit '更新首页图片' %>
  </p>
<% end %>
<div id="sw_canvas">
  <%=render :partial=>"home/side_space", :locals => {:category => 2}%>
  <div id="sw_main">
    <div id="content">
      <div id="results_area">
        <div id="results_container">
          <div class="sb_ph">
            <h1><strong>阿拉额花头劲</strong></h1>
            <span class="sb_count">视频短片在线播放</span>
          </div>
          <div id="results"><br/>
            <div style="font-size:20px;font-weight:bold;color: black;margin: 20px 0px;padding-bottom: 5px; border-bottom: thin solid black;">视频短片</div>
            <div style="width:600px">
              <%if @video.nil? %>
                <%= render :partial => 'video/no_video' %>
              <%else%>
                <div style="width:590px;background-color: black;text-align: center">
                  <%=render :partial=>"home/video_space"%>
                </div><br/>
                <table width="595" cellpadding="0" cellspacing="0">
                  <tr>
                    <td width="70" style="vertical-align:top;line-height: 20px;color: gray">
                      <strong>视频标题:</strong>
                    </td>
                    <td width="525" style="vertical-align:top;text-align:justify; padding: 0px 10px;line-height: 20px;color: gray">
                      <%=h @video.title%>
                    </td>
                  </tr>
                  <tr height="10"><td colspan="2"></td></tr>
                  <tr>
                    <td style="vertical-align:top;line-height: 20px;color: gray">
                      <strong>视频提供:</strong>
                    </td>
                    <td style="vertical-align:top;text-align:justify; padding: 0px 10px;line-height: 20px;color: gray">
                      <%=h @video.owner%>
                    </td>
                  </tr>
                  <tr height="10"><td colspan="2"></td></tr>
                  <tr>
                    <td style="vertical-align:top;line-height: 20px;color: gray">
                      <strong>视频说明:</strong>
                    </td>
                    <td style="vertical-align:top;text-align:justify; padding: 0px 10px;line-height: 20px;color: gray">
                      <%=h @video.remark%>
                    </td>
                  </tr>
                  <tr height="10"><td colspan="2"></td></tr>
                  <tr>
                    <td style="vertical-align:top;line-height: 20px;color: gray">
                      <strong>更新时间:</strong>
                    </td>
                    <td style="vertical-align:top;text-align:justify; padding: 0px 10px;line-height: 20px;color: gray">
                      <%=h @video.updated_at%>
                    </td>
                  </tr>
                </table>
              <%end%>
              <p style="font-weight:bolder;text-align: right">
                <%=mail_to "shanghaiiloveu@hotmail.com", "举报不良视频"%> | <%= link_to "返回视频列表", :controller=>"video" %>
              </p>
            </div>
          </div>
          <%=render :partial=>"home/page_list"%>
        </div>
      </div>
      <div id="sidebar"><%=render :partial=>"home/adv_space"%></div>
    </div>
  </div>
</div>